<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2>You allowed <%= pluralize(article.errors.count, "error") %>:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>

  <p>
    <%= form.radio_button :publication, false %>
    <%= form.label "Draft" %>
    <%= form.radio_button  :publication, true %>
    <%= form.label "Publication" %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
