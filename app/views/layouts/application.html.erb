<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <ul>
        <% if person_signed_in? %>
          <li><%= link_to 'My profile', current_person %></li>
          <li><%= link_to 'All articles of all users', articles_path %></li>
          <li><%= link_to 'All users', people_path %></li>
          <li><%= link_to 'Sign out', destroy_person_session_path,
                  method: :delete %></li>
        <% else %>
          <li><%= link_to 'Sign in', new_person_session_path %></li>
          <li><%= link_to 'Sign up',
                  new_person_registration_path %></li>
        <% end %>
      </ul>
    </div>
    <%= yield %>
  </body>
</html>
